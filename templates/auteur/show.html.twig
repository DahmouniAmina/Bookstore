{% extends 'base.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
<div class="container mt-5 col-md-6 col-md-offset-3">
        <div class="card text-center">
                <div class="card-header text-white bg-dark mb-3">
                        <h2>Auteur Details</h2>
                </div>
                <div class="card-body ">
                    <div class="row justify-content-center" style="display: flex;justify-content: center;">
                        <h3>{{ auteur.nomPrenom }}</h3>
                            <div class="col-1 col-md-2 mb-2">ID :  {{ auteur.id }}</div>
                            <!-- Force next columns to break to new line -->
                            <div class="w-100"></div>
                                    
                            <div class="col-2 col-md-2 mb-2">Sexe : {{ auteur.sexe }}</div>
                            <div class="w-100"></div>
                                
                            <div class="col-3 col-md-6 mb-2">Date_de_naissance : {{ auteur.dateDeNaissance ? auteur.dateDeNaissance|date('Y-m-d') : '' }}</div>
                            <div class="w-100"></div>
                                
                            <div class="col-2 col-md-4 mb-3">Nationalite : {{ auteur.nationalite }}</div>
                            <div class="w-100"></div>
                </div>
        </div>
        <div class="card-footer text-muted text-white bg-dark">
           <div style=" display: flex;justify-content: center;">

                    {% if is_granted('ROLE_ADMIN') %}
						<a href="{{ path('auteur_edit', {'id': auteur.id}) }}" class="btn btn-success" style="margin-right:10px"><i class="bi bi-pencil-square"></i> Modifier</a>   {{ include('auteur/_delete_form.html.twig') }} 
					{% endif %}
               
            </div>
                               
        </div>
</div>
            <div class="row mt-3">
                <div style="display: flex;justify-content: center;">
                    <a href="{{ path('auteur_index') }}" class="btn btn-primary"><i class="bi bi-arrow-left-circle"></i> Retour Ã  la liste des auteurs</a>
                </div>
            </div>
{% endblock %}
